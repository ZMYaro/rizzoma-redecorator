{
	"manifest_version": 2,
	"name": "Rizzoma Redecorator",
	"version": "2.7.3",
	"description": "Replaces the Rizzoma view mode toolbars with a dark-on-light varient.",
	"icons": {
	},
	
	"permissions": [
		"cookies",
		"*://rizzoma.com/topic/*",
		"*://pre.rizzoma.com/topic/*"
	],
	
	"content_scripts": [{
		"matches": [
			"*://rizzoma.com/topic/*",
			"*://pre.rizzoma.com/topic/*"
		],
		"css": ["toolbars.css"]
	}],
	
	"background": {
		"scripts": ["setcookie.js"],
		"persistent": false
	}
}
